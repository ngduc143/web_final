<%= form_with(model: cosmetic) do |form| %>
<% if cosmetic.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(cosmetic.errors.count, "error") %> prohibited this cosmetic from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% cosmetic.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :name, class: label_class %>
          <%= form.text_field :name, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :quantity, class: label_class %>
          <%= form.number_field :quantity, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :price, class: label_class %>
          <%= form.text_field :price, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :category, class: label_class %>
          <%= form.text_field :category, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :brand, class: label_class %>
          <%= form.text_field :brand, class: input_class %>
      </div>

  <div>
    <br />
    <%= form.fields_for :placement do |placement_form| %>
       <%= placement_form.label :floor, class: label_class%>
       <%= placement_form.text_field :floor, class: label_class%>
       <br />
       <%= placement_form.label :product_shelf, class: label_class%>
       <%= placement_form.text_field :product_shelf, class: label_class%>
       <% end %>
  </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if cosmetic.persisted? %>
<%= link_to "Cancel", cosmetic, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", cosmetics_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
